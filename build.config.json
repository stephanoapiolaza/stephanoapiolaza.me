{
  "paths": {
    "src": "./app",
    "build": "./build",
    "buildCss": "./build/css",
    "temp": "./.tmp",
    "scss": "./app/scss"
  },
  "package": {
    "path": "./build",
    "name": "production.zip"
  },
  "buildExts": "js,css",
  "vendor" : {
    "name" : "vendor",
    "polyfills" : [
      "node_modules/core-js/client/shim.min.js",
      "node_modules/zone.js/dist/zone.js",
      "node_modules/reflect-metadata/Reflect.js",
      "node_modules/systemjs/dist/system.src.js"
    ],
    "thidLibraries" : [
      "node_modules/rxjs/**/*",
      "node_modules/@stephanoapiolaza/**/*",
      "node_modules/dragula/**/*",
      "node_modules/ng2-dragula/**/*",
      "node_modules/dom-autoscroller/**/*"
    ],
    "core" : [ "node_modules/@angular/**/*" ]
  }
}
